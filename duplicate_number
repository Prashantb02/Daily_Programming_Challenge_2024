#include <vector>
#include <iostream>
using namespace std;
class Solution {
public:
    int findDuplicate(vector<int>& nums) {
        int duplicate = 0;
        int n = nums.size() - 1;
        for (int bit = 0; bit < 32; ++bit) {
            int mask = (1 << bit);
            int base_count = 0, nums_count = 0;
            for (int i = 0; i <= n; ++i) {
                if (i & mask) {
                    ++base_count;
                }
                if (nums[i] & mask) {
                    ++nums_count;
                }
            }
            if (nums_count > base_count) {
                duplicate |= mask;
            }
        }
        return duplicate;
    }
};
int main() {
    vector<int> arr = {3, 1, 3, 4, 2};
    Solution solution;
    int result = solution.findDuplicate(arr);
    << "Duplicate number: " << result << std::endl;
    return 0;
}
